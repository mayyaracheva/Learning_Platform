
@{
    this.ViewData["Title"] = "Details";
}
@model Course


<h2>@this.Model.Title</h2>
<p class="margin12"><h6>Category:</h6> @this.Model.Category.Name</p>
<p class="margin12"><h6>Description:</h6> @this.Model.Description</p>

<h4>Sections</h4>

<p>
    <a class="btn btn-primary float-right" asp-controller="Section" asp-action="CreateSection" asp-route-id="@Model.Id">Add new Section</a>
</p>

@{
    foreach (var item in this.Model.Sections)
    {
        <dl>
            <p>
                <div align="left">
                    <a asp-controller="Section" asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                    <p>
                        <span>
                            <a style="color: black" asp-controller="Section" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a style="color: black" asp-controller="Section" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            @if (item.IsRestricted)
                            {
                                <a style="color: black" asp-controller="Section" asp-action="ShowSection" asp-route-id="@item.Id" class="badge rounded-pill bg-info">Publish Section</a>
                            }
                            else
                            {
                                <a style="color: black" asp-controller="Section" asp-action="HideSection" asp-route-id="@item.Id" class="badge rounded-pill bg-primary">Hide Section</a>
                            }
                        </span>
                    </p>
                </div>
            </p>

            @*<dt>@item.Title</dt>*@
            @*<dd>- @item.Content</dd>*@
        </dl>
    }
}

<h4>Students</h4>

<p>
    <a class="btn bg-dark text-white float-right" asp-controller="Courses" asp-action="EnrollStudents" asp-route-id="@Model.Id">Enroll Students</a>
</p>


<ul>
    @{
        foreach (var user in this.Model.Users)
        {
            <li class="margin12">@user.FirstName @user.LastName</li>
        }
    }
</ul>
