@{
    this.ViewData["Title"] = "Enroll Students";
}

@model List<User>

<p class="margin12"><h4>Students not enrolled in this course</h4></p>


<form method="post" asp-controller="Courses" asp-action="Enroll">
        <table>
            @foreach (var student in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="students" value="@student.Id" />
                    </td>
                    <td>
                        <label for="@student.Id">@student.FirstName @student.LastName</label>
                    </td>
                </tr>
            }
        </table>
        <br/>
        <input class="btn btn-primary" type="submit" value="Enroll"/>
    </form>
